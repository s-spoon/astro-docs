---
import { ViewTransitions } from "astro:transitions";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href={`${import.meta.env.BASE_URL}favicon.png`} />
    <link rel="preload" href={`${import.meta.env.BASE_URL}SuisseIntl/font.css`} as="style" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>Page not found</title>
    <style is:global>
      h1, h2 {
        font-family: SuisseIntlBook, Arial, Helvetica, sans-serif;
      }
      
      :root {
        font-size: clamp(11px, 1.05vw, 14px);
      }
      * {
        /* font-family: Arial, Helvetica, sans-serif; */
        --scrollbarBG: theme(colors.neutral.50);
        --thumbBG: theme(colors.neutral.300);
        --thumbBorder: theme(colors.neutral.100);
      }
      *::-webkit-scrollbar {
        width: .6em;
        background: var(--scrollbarBG);
        border-radius: 10px;
      }
      *::-webkit-scrollbar-thumb {
        background: var(--thumbBG);
        width: 100%;
        border: 1px solid var(--thumbBorder);
        border-radius: 10px;
      }
      *::-webkit-scrollbar-track {
        box-shadow: inset 0 0 4px var(--thumbBorder);
      }
    </style>
    <ViewTransitions />
	</head>
	<body class="absolute top-0 bottom-0 left-0 right-0 flex items-center justify-center">
    <main>
      <div class="flex mb-4">
        <img src={`${import.meta.env.BASE_URL}aptean-black.svg`} class="w-48" />
      </div>
      <h1 class="text-4xl mb-4">Page not found (404)</h1>
      <p class="text-lg my-2">Sorry, the page you are looking for does not exist.</p>
      <a class="text-lg text-blue-600 hover:text-blue-500" href={import.meta.env.BASE_URL}>Take me home</a>
    </main>
	</body>
</html>
